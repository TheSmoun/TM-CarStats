<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:TM_CarStats"
	x:Class="TM_CarStats.RacingMonitor"
	x:Name="Page"
	FlowDirection="LeftToRight" Loaded="Page_Loaded">

	<Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
		<local:MonitorElement x:Name="TitleItem" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="0" />
	</Grid>
</UserControl>