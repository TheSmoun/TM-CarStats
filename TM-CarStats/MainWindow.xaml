<Controls:MetroWindow x:Class="TM_CarStats.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:TM_CarStats"
        Title="Trinity Motorsports Car Stats" Height="720" Width="1280" MinHeight="500" MinWidth="889" Loaded="Window_Loaded" Closing="Window_Closing" GlowBrush="#FF007ACC" Icon=".\trinitylogo.png" ShowIconOnTitleBar="True">
    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Menu x:Name="MainMenu" Grid.Row="0" Height="25" VerticalAlignment="Top" BorderBrush="#FF3F3F46" BorderThickness="0,0,0,1" />
		<Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" x:Name="Grid0" Grid.Row="1" >
			<Grid.ColumnDefinitions>
				<ColumnDefinition MinWidth="200" />
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition MinWidth="200" />
			</Grid.ColumnDefinitions>
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <local:RacingMonitor x:Name="RacingMonitor" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
            </ScrollViewer>
            <GridSplitter Grid.Column="1" Grid.ColumnSpan="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="5" ResizeDirection="Columns" Margin="0" x:Name="GridSplitterC" Background="#FF3F3F46" />
			<Grid Grid.Column="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" x:Name="Grid1">
				<Grid.RowDefinitions>
					<RowDefinition MinHeight="70" />
					<RowDefinition Height="Auto" />
					<RowDefinition MinHeight="70" />
				</Grid.RowDefinitions>
                <Viewbox Grid.Row="0">
					<local:CarStats x:Name="MyCarStats" Height="317.5" Width="633.5" />
				</Viewbox>
                <GridSplitter Grid.Row="1" Grid.RowSpan="1" HorizontalAlignment="Stretch" Height="5" ResizeDirection="Rows" Margin="0" x:Name="GridSplitterR" Background="#FF3F3F46" />
			</Grid>
		</Grid>
        <StatusBar x:Name="MyStatusBar" Height="25" Grid.RowSpan="2" VerticalAlignment="Top" Grid.Row="2" Background="#FF007ACC">
			<StatusBarItem x:Name="Item1" Content="StatusBarItem" Height="25" VerticalAlignment="Top" Margin="10,0,0,0"/>
		</StatusBar>
        
	</Grid>
</Controls:MetroWindow>
